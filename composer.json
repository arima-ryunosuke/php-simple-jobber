{
  "config": {
    "platform": {
      "php": "7.4.6"
    }
  },
  "name": "ryunosuke/hellowo",
  "type": "library",
  "description": "simple job worker",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "psr/log": "*"
  },
  "require-dev": {
    "pda/pheanstalk": "4.*",
    "kicken/gearman-php": "1.*",
    "php-amqplib/php-amqplib": "3.*",
    "symfony/process": "5.*",
    "phpunit/phpunit": "9.*",
    "ryunosuke/phpunit-extension": "3.*"
  },
  "suggest": {
    "ext-pcntl": "Required on substantially",
    "ext-inotify": "Required depending on the driver",
    "ext-gearman": "Required depending on the driver",
    "ext-mysqli": "Required depending on the driver",
    "ext-pgsql": "Required depending on the driver",
    "pda/pheanstalk": "Required depending on the driver"
  },
  "autoload": {
    "psr-4": {
      "ryunosuke\\hellowo\\": "src/hellowo",
      "ryunosuke\\hellowo\\ext\\": "src/ext"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test"
    }
  },
  "scripts": {
    "build": [
      "@test",
      "@stress"
    ],
    "test": [
      "php -d disable_functions=register_shutdown_function vendor/phpunit/phpunit/phpunit --configuration=tests/phpunit.xml"
    ],
    "stress": [
      "php tests/integration.php filesystem work",
      "php tests/integration.php beanstalk work",
      "php tests/integration.php gearman work",
      "php tests/integration.php mysql work",
      "php tests/integration.php pgsql work",
      "php tests/integration.php filesystem fork",
      "php tests/integration.php beanstalk fork",
      "php tests/integration.php mysql fork",
      "php tests/integration.php pgsql fork"
    ]
  }
}
